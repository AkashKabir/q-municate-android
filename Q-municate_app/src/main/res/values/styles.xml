<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ToolbarStyle">
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:background">?colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ToolbarTheme</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button_general</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorHint">@color/text_light_dark</item>
    </style>

    <style name="EmojiTabImageButtonStyle" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/selector_tab_emoji</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AvatarImageViewStyle">
        <item name="android:layout_width">@dimen/image_view_big_avatar_layout_width</item>
        <item name="android:layout_height">@dimen/image_view_big_avatar_layout_height</item>
        <item name="android:layout_gravity">center|top</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/placeholder_user</item>
    </style>

    <style name="StaticActionModeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:divider">@drawable/divider_static_action_mode</item>
        <item name="android:showDividers" tools:ignore="NewApi">middle</item>
        <item name="android:dividerPadding" tools:ignore="NewApi">12dp</item>
        <item name="android:background">@color/static_action_mode_background</item>
    </style>

    <style name="StaticActionModeButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_static_action_mode</item>
    </style>

    <style name="StaticActionModeButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">20dp</item> <!-- Offsets left drawable -->
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/static_action_mode_button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="StaticActionModeButtonTextStyle.Done">
        <item name="android:drawableLeft">@drawable/ic_done_dark</item>
        <item name="android:text">@string/dlg_done</item>
    </style>

    <style name="StaticActionModeButtonTextStyle.Cancel">
        <item name="android:drawableLeft">@drawable/ic_cancel_dark</item>
        <item name="android:text">@string/dlg_cancel</item>
    </style>

    <style name="ToggleButtonStyle">
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <style name="SearchRadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/contact_item_header_height</item>
        <item name="android:textColor">@drawable/selector_contacts_tab_text</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_contacts_mode_tab</item>
    </style>

    <style name="TextViewDrawableStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">@drawable/selector_button_general</item>
    </style>

    <style name="TextViewDrawableStyle.White">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextViewDrawableStyle.Dark">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="TextViewLinkStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_button_general</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="TextViewLinkStyle.Dark">
        <item name="android:textColor">@color/text_light_dark</item>
    </style>

    <style name="TextViewLinkStyle.Red">
        <item name="android:textColor">@color/text_red</item>
    </style>

</resources>