<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <com.edmodo.cropper.CropImageView
            android:id="@+id/crop_imageview"
            android:layout_width="@dimen/crop_view_width"
            android:layout_height="@dimen/crop_view_height"
            android:layout_gravity="center"
            app:fixAspectRatio="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin">

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_green_oval_selector"
                android:onClick="cropOnClick"
                android:text="@string/crop_title_crop"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size" />

            <com.quickblox.q_municate.ui.views.RoundedImageView
                style="@style/AvatarImageView"
                android:id="@+id/avatar_imageview"
                android:layout_marginTop="20dp"
                app:border_color="@color/dark_gray"
                app:border_width="@dimen/avatar_border_width"
                app:oval="true"
                android:src="@null"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>