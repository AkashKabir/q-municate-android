<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.quickblox.qmunicate.ui.views.RoundedImageView
        android:id="@+id/avatar_imageview"
        android:layout_width="@dimen/image_view_small_avatar_layout_width"
        android:layout_height="@dimen/image_view_small_avatar_layout_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_user"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatar_imageview"
        android:background="@drawable/left_bubble"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/time_textview"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Valera ValeraValeraValeraValera Valera"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/name_textview"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/time_textview"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="100"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/text_message_linearlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.quickblox.qmunicate.ui.views.smiles.ChatTextView
                    android:id="@+id/message_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="Dsdsd sdfdsdsds"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/attach_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:scaleType="centerCrop"
                android:src="@null"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/please_wait_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/uploading_file"
                android:textColor="@color/gray"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:text="12-12"
            android:textColor="@color/light_gray"/>

    </RelativeLayout>

</RelativeLayout>