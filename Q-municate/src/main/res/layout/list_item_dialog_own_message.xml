<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/text_message_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right_bubble"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.quickblox.qmunicate.ui.views.smiles.ChatTextView
                android:id="@+id/message_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_weight="1"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/time_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:paddingRight="5dp"
                android:textColor="@color/light_gray"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/attach_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="centerCrop"
            android:src="@null"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/please_wait_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/uploading_file"
            android:textColor="@color/white"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>