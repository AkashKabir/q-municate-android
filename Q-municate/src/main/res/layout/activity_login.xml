<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="@string/lgn_restriction_text_numbers"
        android:hint="@string/lgn_email_hint"
        android:text="@string/lgn_default_user_email"
        android:maxLength="128" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="@string/lgn_password_hint"
        android:text="@string/lgn_default_user_password"
        android:inputType="textPassword"
        android:maxLength="256" />

    <CheckBox
        android:id="@+id/rememberMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/lgn_remember_me"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_log_in_selector"
        android:text="@string/wlc_log_in"
        android:textColor="@android:color/white"
        android:textSize="@dimen/button_text_size" />

    <RelativeLayout
        android:id="@+id/connectFacebookButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_connect_facebook_selector">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_fb" />

            <TextView
                android:id="@+id/connectFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/wlc_connect_with_facebook"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="@string/lgn_forgot_password"
        android:textColor="@color/gray"
        android:textSize="18sp" />

</LinearLayout>

